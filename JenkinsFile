@Library('pipelib@master') _


node {
  def mvn = tool 'M3'
  def root = pwd()

 stage('Build/Install Job Common') {
    git([
      url: env.GIT_URL ? env.GIT_URL : 'https://github.com/venicegeo/dg-pz-jobcommon',
      branch: "master"
    ])
    sh """
      ${mvn}/bin/mvn install -U 
    """
  } 

  stage('Archive') {
    git([
      url: env.GIT_URL ? env.GIT_URL : 'https://github.com/venicegeo/dg-pz-servicecontroller',
      branch: "master"
    ])
    sh """
      ${mvn}/bin/mvn clean package -U 
      cp target/piazza-servicecontroller-1.0.0.jar ${root}/pz-servicecontroller.jar
    """
  }

  stage('CI Deploy') {
    sh """
      cp target/piazza-servicecontroller-1.0.0.jar ${root}/pz-servicecontroller.jar
    """
    cfBgDeploy()
  }

  stage('Integration Testing') {
    postman()
  }
   
  stage('Reset') {
    git([
      url: env.GIT_URL ? env.GIT_URL : 'https://github.com/venicegeo/pz-servicecontroller',
      branch: "master"
    ])
  }

  stage('Staging Deploy') {
    cfPush {
      cfDomain  = 'apps.sys.coastline.dg-cf-test.net'
      cfSpace   = 'stage'
    }
    cfBgDeploy {
      cfDomain  = 'apps.sys.coastline.dg-cf-test.net'
      cfSpace   = 'stage'
    }
  }

  stage('Cleanup') {
    deleteDir()
  }
}
